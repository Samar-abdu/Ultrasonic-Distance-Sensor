#include <Servo.h>

const int trigPin = 3;
const int echoPin = 2;

Servo servo1;
Servo servo2;
Servo servo3;
Servo servo4;
Servo servo5;
Servo servo6;



long duration;        
int distance; 


void setup()

{

Serial.begin (9600);

pinMode(trigPin, OUTPUT);
pinMode(echoPin, INPUT);
  

servo1.attach(8);
servo2.attach(9);
servo3.attach(10);
servo4.attach(11);
servo5.attach(12);
servo6.attach(13);
  

  
  // intial position
 servo1.write(0);
servo2.write(0);
servo3.write(0);
servo4.write(0);
servo5.write(0);
servo6.write(0);
  
}

void loop(){
  
  while(getDistance() > 25){  } 
  
 int startTime = millis();  
  
  while(getDistance() < 25){ 
    
    
    int currntTime = millis();  
  
    if (currntTime - startTime > 3000){
 
      Serial.write('1');   
      Serial.println("hello");

servo1.write(90);
servo2.write(90);
servo3.write(90);
servo4.write(90);
servo5.write(90);
servo6.write(90);
      break; }
  
                                        
     
  }

}


int getDistance (){                                  
   

digitalWrite(trigPin, LOW);

delayMicroseconds(2);

digitalWrite(trigPin, HIGH);

delayMicroseconds(10);

digitalWrite(trigPin, LOW);

duration = pulseIn(echoPin, HIGH);

distance = (duration/2) / 29.1;
}
